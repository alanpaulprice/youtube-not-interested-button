{
	"manifest_version": 3,
	"name": "YouTube Quick Curator",
	"version": "1.0",
	"description": "A basic Firefox extension using Manifest V3.",
	"icons": {
		"48": "icon.png"
	},
	"action": {
		"default_icon": "icons/icon.png",
		"default_popup": "popup/popup.html",
		"default_title": "YouTube Quick Curator"
	},
	"permissions": [
		"storage",
		"activeTab",
		"scripting"
	],
	"content_scripts": [
		{
			"matches": [
				"*://www.youtube.com/*"
			],
			"js": [
				"contentScript.js"
			]
		}
	]
}